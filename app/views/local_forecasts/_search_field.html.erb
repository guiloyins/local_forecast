<%= form_with url: local_forecasts_search_path, method: :post, data: {turbo_stream: true}, id: 'search_forecast' do %>
  <%= label_tag :location, "Enter Address:" %>
  <%= text_field_tag :location, @location, placeholder: "e.g., 1327 Murray Dr, Jacksonville - FL" %>
  <%= submit_tag "Get Forecast" %>
<% end %>
